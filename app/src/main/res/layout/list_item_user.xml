<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="120sp"
        android:layout_marginStart="16sp"
        android:layout_marginEnd="16sp"
        android:id="@+id/list_body"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:background="@drawable/horiz_line"
            />

        <ImageView
            android:id="@+id/iv_list_car"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/btn_next_shape"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/tv_list_license_plate"
            android:text="license"
            android:textSize="16sp"
            android:textColor="@color/blueDark3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/tv_list_fuel_level"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="16dp"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/tv_list_fuel_level"
            android:text="fuel level"
            android:textColor="@color/blueDark2"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintLeft_toRightOf="@+id/tv_list_bomb"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_book_car"
            />

        <TextView
            android:id="@+id/tv_list_brand_model"
            android:text="brand model"
            android:textSize="16sp"
            android:textColor="@color/blueDark2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/tv_transmission_icon"
            android:layout_marginBottom="4dp"
            app:layout_constraintLeft_toRightOf="@+id/iv_list_car"
            android:layout_marginStart="16dp" />

        <TextView
            android:id="@+id/tv_transmission"
            android:text="AutomÃ¡tico"
            android:textSize="16sp"
            android:textColor="@color/blueDark2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/btn_book_car"
            android:layout_marginBottom="16dp"
            app:layout_constraintLeft_toRightOf="@+id/tv_transmission_icon"
            android:layout_marginStart="4sp" />


    </android.support.constraint.ConstraintLayout>


</RelativeLayout>
