<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@null"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="80sp"
        android:layout_marginStart="16sp"
        android:layout_marginEnd="16sp"
        android:id="@+id/list_body"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="16dp">

        <ImageView
            android:id="@+id/horiz_line"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@drawable/horiz_line"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintRight_toRightOf="parent"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_photo"
            android:layout_width="55sp"
            android:layout_height="55dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/btn_next_shape"
            android:layout_marginStart="16dp"
            tools:layout_constraintTop_creator="1"
            tools:layout_constraintBottom_creator="1"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="34dp"
            tools:layout_constraintLeft_creator="1"
            android:layout_marginBottom="34dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_name"
            android:text="@string/name"
            android:textSize="18sp"
            android:textColor="@color/blueDark1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="normal|bold"
            tools:layout_constraintBottom_creator="1"
            app:layout_constraintLeft_toRightOf="@+id/iv_photo"
            tools:layout_constraintLeft_creator="1"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@id/horiz_line"
            android:layout_marginTop="16dp"
            />

        <TextView
            android:id="@+id/tv_phone"
            android:text="@string/phone"
            android:textColor="@color/blueDark2"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_constraintBottom_creator="1"
            android:layout_marginTop="4sp"
            app:layout_constraintTop_toBottomOf="@+id/tv_name"
            tools:layout_constraintLeft_creator="1"
            android:layout_marginBottom="2dp"
            app:layout_constraintLeft_toRightOf="@+id/iv_photo"
            android:layout_marginStart="16dp" />


    </android.support.constraint.ConstraintLayout>


</RelativeLayout>
